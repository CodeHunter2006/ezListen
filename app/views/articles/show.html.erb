<p id="notice"><%= notice %></p>

<p>
  <strong>Source url:</strong>
  <%= @article.source_url %>
</p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<% if (!@article.local_audio_url.nil? && !@article.local_audio_url.empty?) %>
	<audio src="<%= @article.local_audio_url %>" controls="controls">
	</audio>
<% end %>

<p>
  <strong>Text content:</strong>
  <%= @article.text_content %>
</p>

<p>
  <strong>Audio file url:</strong>
  <%= link_to "Download file", @article.local_audio_url %>
  <%= @article.audio_file_url %>
</p>
<p>
  <strong>Status:</strong>
  <%= @article.status %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
