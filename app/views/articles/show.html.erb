<p id="notice"><%= notice %></p>

<p>
  <strong>Source url:</strong>
  <%= @article.source_url %>
</p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text content:</strong>
  <%= @article.text_content %>
</p>

<p>
  <strong>Audio file url:</strong>
  <%= @article.audio_file_url %>
</p>
<% if (!@article.audio_file_url.nil? && !@article.audio_file_url.empty?) %>
	<audio src="<%= @article.audio_file_url %>" controls="controls">
	</audio>
<% end %>
<p>
  <strong>Status:</strong>
  <%= @article.status %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
